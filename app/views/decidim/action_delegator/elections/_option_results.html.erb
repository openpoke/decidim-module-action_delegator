<div class="percent-bar">
  <div class="percent-bar-width" style="width: <%= option.votes_percent %>%" data-option-weighted-votes-width="<%= option&.question_id %>,<%= option.id %>"></div>
</div>
<div class="text-right text-sm leading-tight shrink-0 min-w-[64px]">
  <div data-option-weighted-votes-percent-text="<%= option&.question_id %>,<%= option.id %>"><%= number_to_percentage(option.votes_percent, precision: 1) %></div>
  <div data-option-weighted-votes-count-text="<%= option&.question_id %>,<%= option.id %>"><%= t("votes_count", scope: "decidim.elections.elections.show", count: option.weighted_votes_total) %></div>
</div>
